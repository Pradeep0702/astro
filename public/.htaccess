<IfModule mod_headers.c>
    <FilesMatch "^css/style\.css$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>

    FileETag None
    Header unset ETag
    Header set Cache-Control "must-revalidate, proxy-revalidate, no-cache, no-store"
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 0 seconds"
</IfModule>


RewriteEngine On

# Redirect "public" folder access to main URL
RewriteCond %{REQUEST_URI} ^/public [NC]
RewriteRule ^public/?(.*)$ https://%{HTTP_HOST}/ [R=301,L]

# Redirect index.php to main URL
RewriteCond %{THE_REQUEST} \s/+index\.php[\s?] [NC]
RewriteRule ^index\.php$ https://%{HTTP_HOST}/ [R=301,L]

# Force HTTPS and remove www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

